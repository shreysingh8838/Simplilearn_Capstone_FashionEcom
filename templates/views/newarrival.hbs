            </ul>
        </div>
        <div id="mobile">
            <a href="#"><i class="fas fa-shopping-bag"></i></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>
    <section id="form-details">
         
        <form action="/newarrival.hbs" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="{{newproduct._id}}">
            <span>
                <span>  
                    <h2>Insert Product</h2>
                </span>
                <h2>The product will be added in New arrival section</h2>
                <label for="">PRODUCT BRAND</label>
                <input type="text" name="proCompany" placeholder="Type.." value="{{newproduct.proCompany}}">
                <div class="text-danger">{{newproduct.proCompanyError}}</div>

                <label for="">PRODUCT NAME</label>
                <input type="text" name="proTitle" placeholder="Type.." value="{{newproduct.proTitle}}">
                <div class="text-danger">{{newproduct.proTitleError}}</div>

                <label for="">PRODUCT PRICE</label>
                <input type="text" name="proPrice" placeholder="Type.." value="{{newproduct.proPrice}}">
                <div class="text-danger">{{newproduct.proPriceError}}</div>

                <label for="">PRODUCT SPECIFICATION</label>
                <input type="text" name="proGender" placeholder="Type.." value="{{newproduct.proGender}}">
                <div class="text-danger">{{newproduct.proGenderError}}</div>

                <label for="">PRODUCT DETAILS</label>

                <input style="height: 200px;" value="{{newproduct.proDes}}" type="text" cols="30" rows="10"
                    name="proDes" placeholder="Your Message"></input>
                <div class="text-danger">{{newproduct.proDesError}}</div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit" class="normal">Submit</button>
                <a class="btn normal" style="font-size: 14px;
                    font-weight: 700;
                    padding: 15px 30px;
                    color: rgb(255, 255, 255);
                    background-color:#088178;
                    border-radius: 4px;
                    cursor: pointer;
                    border: none;
                    outline: none;
                    transition: 0.2s;" href="/allproducts"><i class=""></i>View All List
                </a>

            </span>
        </form>

    </section>





    <script src="models/script.js"></script>
</body>

