<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="css/shopping-cart.css">
    <title>Cart</title>

</head>

<body>

    {{>navbar}}
    {{# if products}}
    <div class="wrap cf">
        <h1 class="projTitle"><span>-Your</span> Shopping Cart</h1>
        <div class="heading cf">
            <h1>My Cart</h1>
            <a href="shop.hbs" class="continue">Continue Shopping</a>
        </div>
        <div class="cart">
            <!--    <ul class="tableHead">
      <li class="prodHeader">Product</li>
      <li>Quantity</li>
      <li>Total</li>
       <li>Remove</li>
    </ul>-->
            <ul class="cartWrap">
                {{# each products}}

                <li class="items odd">

                    <div class="infoWrap">
                        <div class="cartSection">

                            <img src="image/p1.jpg" id="myImage" image() alt="" class="itemImg" />

                            <p class="itemNumber">{{this.item.proCompany}}</p>
                            <h3>{{this.item.proTitle}}</h3>

                            <p> <span type="text" class="qty">{{this.qty}}</span><span>${{this.price}}</span></p>

                            <p class="stockStatus"> In Stock</p>
                        </div>


                        <div class="prodTotal cartSection">
                            <p><span>$ {{this.price}}</span></p>
                        </div>
                        <div class="cartSection removeWrap">
                            <a href="/reduce/{{this.item._id}}" class="remove">-1</a>
                        </div>
                        <div class="cartSection removeWrap">
                            <a href="/remove/{{this.item._id}}" class="remove">-All</a>
                        </div>
                    </div>
                </li>
                {{/each}}

                <div class="special">
                    <div class="specialContent">Free gift with purchase!, gift wrap, etc!!</div>
                </div>
                </li>


                {{!-- <li class="items even"> Item 2</li> --}}

            </ul>
        </div>

        <div class="promoCode"><label for="promo">Have A Promo Code?</label><input type="text" name="promo"
                placholder="Enter Code" />
            <a href="#" class="btn"></a>
        </div>

        <div class="subtotal cf">
            <ul>
                {{!-- <li class="totalRow"><span class="label">Subtotal</span><span class="value">$35.00</span></li>

                <li class="totalRow"><span class="label">Shipping</span><span class="value">$5.00</span></li>

                <li class="totalRow"><span class="label">Tax</span><span class="value">$4.00</span></li> --}}
                <li class="totalRow final"><span class="label">Total</span><span class="value">${{totalPrice}}</span>
                </li>
                <li class="totalRow"><a href="/checkout.hbs" type="button" class="btn continue">Checkout</a></li>
            </ul>
        </div>
    </div>
    {{else}}
    <ul class="cartWrap">
        <li class="items odd">

            <div class="infoWrap">
                <div class="cartSection">
                    <img src="" alt="" class="itemImg" />
                    <p class="itemNumber"></p>
                    <h1 class="projTitle"><span>-Your</span> Shopping Cart</h1>
                    <h3 style="margin: auto;
  width: 50%;
  border: 3px solid green;
  padding: 10px;
  text-align: center;">No Item In Your Cart</h3>
                </div>
            </div>
        </li>
    </ul>
    {{/if}}

    </script>
    <script src="models/shopping-cart.js"></script>
</body>

</html>